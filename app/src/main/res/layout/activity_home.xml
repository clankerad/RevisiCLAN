<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efe8ef"
    tools:context="com.clan.clan.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#efe8ef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffffff"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:background="#efe8ef"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="#efe8ef"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                       <LinearLayout
                           android:layout_weight="2"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:id="@+id/textView9"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               android:textSize="18dp"
                               android:text="Welcome" />

                           <TextView
                               android:id="@+id/textView9"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               android:textSize="18dp"
                               android:text="Chandra" />


                       </LinearLayout>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="12dp"
                            android:text="You have xxx Points" />

                        <TextView
                            android:id="@+id/textView10"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="and xxx Redeem Points" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:layout_weight="2"
                            android:text="Leaderboard"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:layout_weight="2"
                            android:text="Redeem"
                            android:textSize="10dp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="#efe8ef"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="3">

                        <ImageButton
                            android:id="@+id/btn_event"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/event" />

                        <ImageButton
                            android:layout_marginLeft="5dp"
                            android:id="@+id/btn_venue"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/venue" />

                        <ImageButton
                            android:layout_marginLeft="5dp"
                            android:id="@+id/btn_challenge"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/challenge" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btn_story"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/story" />

                        <ImageButton
                            android:layout_marginLeft="5dp"
                            android:id="@+id/btn_marketplace"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/marketplace" />
                        <ImageButton
                            android:layout_marginLeft="5dp"
                            android:id="@+id/btn_feedback"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/feedback" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp">

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tab1" />

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tab2" />

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tab3" />

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tab3" />
                    </android.support.design.widget.TabLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:background="#efe8ef"
                    android:gravity="center"
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:gravity="center"
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earn Point" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>





</LinearLayout>
